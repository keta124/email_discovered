<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'm-t'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, placeholder: 'Email', label: false %>
    <%= f.input :phone, required: true, hint: 'Ví dụ:  0912345678',placeholder: 'Phone number', label: false %>
    <%= f.input :password, required: true, hint: (" Tối thiểu #{@minimum_password_length} ký tự" if @minimum_password_length), placeholder: 'Password', label: false %>
    <%= f.input :password_confirmation, required: true, placeholder: 'Password Confirmation', label: false %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign up", class: 'btn btn-primary block full-width m-b' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
